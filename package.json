{
  "name": "shogi.js",
  "version": "2.0.3",
  "description": "simple shogi library for JavaScript",
  "main": "dist/shogi.js",
  "types": "dist/src/shogi.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "webpack --mode=production -p",
    "build:analyze": "webpack --mode=production -p --env.analyze",
    "build:watch": "webpack --mode=development --watch",
    "lint": "tslint -p ./",
    "lint:fix": "tslint -p ./ --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build",
    "docs": "typedoc --exclude '**/__tests__/**/*' ./src/shogi.ts",
    "deploy:ghpages": "rm -rf ./public && mkdir -p ./public && npm run docs && mv ./docs ./public/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/na2hiro/Shogi.js.git"
  },
  "keywords": [
    "shogi",
    "library"
  ],
  "author": "na2hiro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/na2hiro/Shogi.js/issues"
  },
  "homepage": "https://github.com/na2hiro/Shogi.js#readme",
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "browserify": "^16.5.0",
    "clean-webpack-plugin": "^0.1.19",
    "jest": "^26.1.0",
    "pre-push": "^0.1.1",
    "ts-jest": "^26.4.3",
    "ts-loader": "^4.3.1",
    "tslint": "^5.9.1",
    "typedoc": "^0.20.0-beta.8",
    "typescript": "^4.0.5",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.1.2"
  },
  "pre-push": [
    "lint",
    "test"
  ],
  "dependencies": {}
}
